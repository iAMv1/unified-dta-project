# Include the README and license files
include README.md
include LICENSE
include CHANGELOG.md

# Include requirements files
include requirements.txt
include requirements-dev.txt

# Include configuration files
recursive-include unified_dta/configs *.yaml *.json
recursive-include configs *.yaml *.json

# Include data samples
recursive-include unified_dta/data *.csv
recursive-include data/samples *.csv

# Include documentation
recursive-include docs *.rst *.md *.py *.bat
recursive-include docs/_static *
recursive-include docs/_templates *

# Include tests
recursive-include tests *.py

# Include examples and notebooks
recursive-include examples *.py *.ipynb *.md
recursive-include notebooks *.ipynb *.md

# Exclude compiled files and caches
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude *.egg-info

# Exclude development files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude tox.ini
exclude .coverage
exclude pytest.ini